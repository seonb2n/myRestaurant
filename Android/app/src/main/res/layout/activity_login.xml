<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/textViewId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:layout_margin="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <EditText
        android:id="@+id/textViewPw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:layout_margin="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/border"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onButtonLoginClicked"
        />

    <Button
        android:id="@+id/buttonJoin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="JOIN"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onButtonJoinClicked"
        />

    <Button
        android:id="@+id/buttonJoinNaver"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="네이버로 로그인"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@color/naverGreen"
        android:textColor="@color/colorWhite"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onButtonJoinNaverClicked"
        />

</LinearLayout>